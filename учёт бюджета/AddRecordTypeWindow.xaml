<Window x:Class="учёт_бюджета.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:учёт_бюджета"
        mc:Ignorable="d"
        Title="Добавление нового типа записи" Height="200" Width="500" ResizeMode="NoResize" >
    <Grid Background="#FFCCCCCA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Texttype" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="410" Height="39" FontSize="24" Background="#FFD1BAB7"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" Text="Введите новый тип" VerticalAlignment="Top" Height="27" Width="180" FontSize="20"/>
        <Button x:Name="eeeee" Content="Добавить" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="29" Width="120" FontSize="16" Background="#FFCFB4B1" Click="Button_Click"/>

    </Grid>
</Window>
